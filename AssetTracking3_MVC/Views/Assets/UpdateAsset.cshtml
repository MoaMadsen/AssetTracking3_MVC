@model AssetItem
@*
    This page is for Editing Asset item
*@
@{
    ViewData["Title"] = "Update Asset Item Data";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="UpdateAsset">
    <div class="border p-5">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Detail of Asset</h2>
        </div>
        <br />

        <div class=row>
            <div class="col-4">
                <label asp-for="Office"></label>
                <select asp-for="OfficeId" name="officeid" asp-items="ViewBag.OfficeId"></select>
            </div>
        </div>
        <br />

        <div class=row>
            <div class="col-4">
                <label asp-for="Category"></label>
                <select asp-for="CategoryId" name="categoryid" asp-items="ViewBag.CategoryId"></select>
           </div>
        </div>
        <br />

        <div class=row>
               <div class="col-4">
                    <label asp-for="Brand"></label>
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
               </div>  
        </div>
        <br />

        <div class=row>
               <div class="col-4">
                    <label asp-for="Model"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
               </div>  
        </div>
        <br />

        <div class=row>
               <div class="col-4">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
               </div>
         </div>
        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="PurchaseDate"></label>
                <input asp-for="PurchaseDate" type="date" class="form-control"/>
            </div>
        </div>
        <br />

       <div class="row">
            <div class="col-4">
                <label asp-for="EndOfLife"></label>
                <input asp-for="EndOfLife" type="date" name="enddate" class="form-control")" />
            </div>
        </div>
        <br />

        <div class="w-12 btn-group" role="group">
                <input type="submit"class="btn btn-primary mx-1" value="Update" />
                <a asp-action="IndexAsset" class="btn btn-danger mx-1">Back</a>
        </div>
    </div>
</form>
