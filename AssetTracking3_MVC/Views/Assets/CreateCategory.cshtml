@*
    This page is for creating Category database
*@
@model Category
@{
}
@{
    ViewData["Title"] = "Create New Category";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="CreateCategory">
    <div class="border p-5">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Enter new Category</h2>
        </div>
        <br />

        <div class=row>
               <div class="col-4">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
               </div>  
        </div>
        <br />

        <div class="w-12 btn-group" role="group">
                <input type="submit"class="btn btn-primary mx-1" value="Save" />
                <a asp-action="IndexCategory" class="btn btn-danger mx-1">Back</a>
        </div>
    </div>
</form>