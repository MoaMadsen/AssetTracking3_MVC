@model List<Category>
@*
    This page display all the countries in the office database
*@
@{
    ViewData["Title"] = "Category Data Maintenance";
}
<h1>@ViewData["Title"]</h1>
<div>
    <div class="row pt-4">
        <div class="col-9">
        <h2 class="text-success">View categories</h2>
        </div>
        <div class="col-3">
            <a asp-controller="Assets" asp-action="CreateCategory" class="btn btn-primary btn-lg">Add New Category</a>
        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-hover table-striped"> 
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Description</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model){
            <tr>
                <td width="10%">@item.Id</td>
                <td width="20%">@item.Description</td>
                <td width="30%">
                    <div class="w-100 bth-group" role="group">
                        <a asp-controller="Assets" asp-action="UpdateCategory" app-route-id ="@item.Id" class="btn btn-primary">Update</a>
                        <a asp-controller="Assets" asp-action="DeleteCategory" app-route-id ="@item.Id" class="btn btn-danger">Delete</a>

                    </div>
                </td>
            </tr>
        }
     </tbody>
 </table>