@model List<AssetItem>
@*
    This page display all Asset database
*@
@{
    ViewData["Title"] = "Asset Data Maintenance";
}
<h1>@ViewData["Title"]</h1>
<div>
    <div class="row pt-4">
        <div class="col-9">
        <h2 class="text-success">Recently Added Asset Items</h2>
        </div>
        <div class="col-3">
            <a asp-controller="Assets" asp-action="CreateAsset" class="btn btn-primary btn-lg">Add New Item</a>
        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-hover table-striped"> 
    <thead>
        <tr>
            <th>Country</th>
            <th>Category</th>
            <th>Model</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Purchase Date</th>
            <th>End of Life Date</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model){
            <tr>
                <td width="10%">@item.Office.Country</td>
                <td width="10%">@item.Category.Description</td>
                <td width="10%">@item.Model</td>
                <td width="10%">@item.Brand</td>
                <td width="10%">@item.Price</td>
                <td width="10%">@item.PurchaseDate.ToString("yyyy-MM-dd")</td>
                <td width="10%">@item.EndOfLife.ToString("yyyy-MM-dd")</td>
                <td width="20%">
                    <div class="w-100 bth-group" role="group">
                        <a asp-controller="Assets" asp-action="UpdateAsset" asp-route-id ="@item.Id" class="btn btn-primary">Update</a>
                        <a asp-controller="Assets" asp-action="DeleteAsset" asp-route-id ="@item.Id" class="btn btn-danger">Delete</a>

                    </div>
                </td>
            </tr>
        }
     </tbody>
 </table>